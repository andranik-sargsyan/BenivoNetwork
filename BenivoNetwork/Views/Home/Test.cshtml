@using BenivoNetwork.Models

@model HomeModel

@{
    ViewBag.Title = "Test";
}

<script src="~/Scripts/test.js" type="text/javascript"></script>

<style type="text/css">
    #my-div > div {
        height: 33.3333%;
        border-bottom: solid 1px black;
    }
</style>

<h2>Test</h2>

<div class="row content">
    <div class="col-md-12">
        <input id="txt-name" type="text" />
        <button id="btn-load">Click!</button>
        <button id="btn-post">Post!</button>
    </div>
</div>

<hr />

@using (Html.BeginForm("Test", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => m.Count)</div> <div class="col-md-10">@Html.EditorFor(m => m.Count)</div>
    </div>
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => m.Text) *</div> <div class="col-md-10">@Html.EditorFor(m => m.Text)</div>
        <div class="text-danger">
            @Html.ValidationMessageFor(m => m.Text)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => m.IsImported)</div> <div class="col-md-10">@Html.EditorFor(m => m.IsImported)</div>
    </div>
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => m.DayType) *</div> <div class="col-md-10">@Html.EditorFor(m => m.DayType)</div>
        <div class="text-danger">
            @Html.ValidationMessageFor(m => m.DayType)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => m.Names)</div> <div class="col-md-10">@Html.EditorFor(m => m.Names)</div>
    </div>
    <div class="row">
        <div class="col-md-2"><label>File</label></div> <div class="col-md-10"><input type="file" id="my-file" name="MyFile" multiple="multiple" /></div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary" />
        </div>
    </div>
}
