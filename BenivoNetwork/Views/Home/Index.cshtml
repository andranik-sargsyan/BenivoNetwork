@using BenivoNetwork.Common.Models

@model IndexModel

@{
    ViewBag.Title = "Home";
}

<script type="text/javascript">
    let _postURL = "@Url.RouteUrl("DefaultApi", new { httproute = "", controller = "Post" })";
</script>

<link href="~/Styles/index.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/index.js" type="text/javascript"></script>

<div class="row content">
    <div class="col-md-2">
        @Html.Partial("_Advertisement")
    </div>
    <div class="col-md-7">
        <h3>News Feed</h3>
        <div id="bn-post-input-wrapper" class="mb-2">
            <textarea class="form-control" placeholder="What's on you mind?"></textarea>
        </div>
        <div id="bn-posts">
            @Html.Partial("_Posts", Model.Posts)
            <!--ADD load more link or load on scroll or both one by one-->
        </div>
    </div>
    <div class="col-md-3 sidenav">
        <h3>Friends</h3>
        <div id="bn-firends">
            @Html.Partial("_Users", Model.FriendUsers)
        </div>
        <h3>Other Users</h3>
        <div id="bn-other-users">
            @Html.Partial("_Users", Model.OtherUsers)
        </div>
    </div>
</div>
